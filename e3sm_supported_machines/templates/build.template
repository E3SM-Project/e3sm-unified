#!/bin/bash

build_dir=$(pwd)

{{ modules }}

set -e


if [ "{{ build_mpi4py }}" == "True" ]; then
    MPICC="{{ mpicc }} -shared" python -m pip install --no-cache-dir "mpi4py=={{ mpi4py_version }}"
fi



if [ "{{ build_ilamb }}" == "True" ]; then
    mamba install -y {{ ilamb_channels }} --no-deps "ilamb={{ ilamb_version }}"
fi
